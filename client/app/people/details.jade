div( id='details' )
	h2 Person
	div.row
		table.details
			tr( ng-repeat="field in person | fieldFilter" )
				td( ng-bind='field' )
				td( ng-bind-html='person[field]' )
	br
	div.row
		div.col-xs-6.col-sm-3.col-lg-3.col-sm-offset-6.col-lg-offset-6
			a.btn.btn-primary.btn-block( ui-sref="people.list" ) Back
		div.col-xs-6.col-sm-3.col-lg-3
			a.btn.btn-block(
				ng-init="hired = peopleService.isHired($stateParams.personId)"
				ng-class="hired ? 'btn-danger' : 'btn-success'"
				ng-click="hired = peopleService.hire($stateParams.personId)"
			) {{hired ? 'Dismiss' : 'Hire'}}